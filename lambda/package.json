{
    "name": "alexa-radio-gong",
    "version": "2.4.0",
    "description": "Alexa Skill for querying playlist from Radio Gong http://www.radiogong.com/",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "reinstall": "rm -rf ./node_modules && npm install",
        "test:unit": "c8 --reporter=lcov --reporter=text mocha --timeout=5000 test/unit/*",
        "test:integration": "mocha --timeout=20000 test/integration/*",
        "test": "npm run test:unit",
        "lambda:zip": "zip -r /tmp/radioGong.zip node_modules/ package* *.js",
        "lambda:deploy": "npm run lambda:zip && aws lambda update-function-code --function-name radioGong --zip-file fileb:///tmp/radioGong.zip"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sgruendel/alexa-radio-gong.git"
    },
    "keywords": [
        "alexa",
        "skill",
        "radio",
        "gong",
        "würzburg",
        "playlist"
    ],
    "author": "Stefan Gründel",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/sgruendel/alexa-radio-gong/issues"
    },
    "homepage": "https://github.com/sgruendel/alexa-radio-gong#readme",
    "dependencies": {
        "ask-sdk-core": "^2.14.0",
        "ask-sdk-model": "^1.86.0",
        "c8": "^10.1.3",
        "i18next": "^25.8.1",
        "i18next-sprintf-postprocessor": "^0.2.2",
        "node-fetch": "^3.3.2",
        "winston": "^3.19.0"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "alexa-skill-test-framework": "^1.2.4",
        "chai": "^6.2.2",
        "eslint": "^10.0.0",
        "globals": "^17.3.0",
        "mocha": "^11.7.5"
    }
}
