{
  "name": "alexa-radio-gong",
  "version": "2.3.0",
  "description": "Alexa Skill for querying playlist from Radio Gong http://www.radiogong.com/",
  "main": "index.js",
  "scripts": {
    "reinstall": "rm -rf ./node_modules && npm install",
    "test:unit": "nyc --reporter=lcov --reporter=text mocha --timeout=5000 test/unit/*",
    "test:integration": "mocha --timeout=20000 test/integration/*",
    "test": "npm run test:unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgruendel/alexa-radio-gong.git"
  },
  "keywords": [
    "alexa",
    "skill",
    "radio",
    "gong",
    "würzburg",
    "playlist"
  ],
  "author": "Stefan Gründel",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/sgruendel/alexa-radio-gong/issues"
  },
  "homepage": "https://github.com/sgruendel/alexa-radio-gong#readme",
  "dependencies": {
    "ask-sdk-core": "2.12.1",
    "ask-sdk-model": "1.38.2",
    "cheerio": "0.22.0",
    "i18next": "21.8.5",
    "i18next-sprintf-postprocessor": "0.2.2",
    "node-fetch": "^2.6.7",
    "winston": "3.7.2"
  },
  "devDependencies": {
    "alexa-skill-test-framework": "1.2.4",
    "chai": "4.3.6",
    "eslint": "8.17.0",
    "eslint-config-strongloop": "2.1.0",
    "mocha": "10.0.0",
    "nyc": "15.1.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "extends": "strongloop",
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "max-len": [
        "error",
        120,
        4,
        {
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
        }
      ]
    }
  }
}
